<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_subject_registration_tree" model="ir.ui.view">
            <field name="name">op.subject.registration.tree</field>
            <field name="model">op.subject.registration</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Matricula">
                    <field name="academic_term_id"/>
                    <field name="subject_id"/>
                    <field name="cycle"/>
                    <field name="num_credits" class="text-center"/>          
                    <field name="student_name"/>
                    <field name="roll_number"/>
                    <field name="mode_roll"/>
                    <field name="state"/>           
                                  
                </tree>
            </field>
        </record>

        <record id="view_subject_registration_form" model="ir.ui.view">
            <field name="name">op.subject.registration.form</field>
            <field name="model">op.subject.registration</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Matricula">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="activo,retirado,aprobado,desaprobado" />
                        <button name="action_set_retirado" string="Retirar"
                            type="object" class="oe_highlight"
                            states="activo" />
                        <button name="action_set_aprobado" string="Aprobar"
                                type="object" class="oe_highlight"
                                states="activo" />
                        <button name="action_set_activo" string="Activar"
                                type="object" class="oe_highlight"
                                states="retirado" />
                        <button name="action_set_desaprobado" string="Desaprobar"
                                type="object" class="oe_highlight"
                                states="activo" />                           
                    </header>
                    <sheet>
                         <div class="o_row" >
                            <div class="o_col-6">
                                <h3>
                                    <strong>PROGRAMA: </strong><field name="course_name" readonly="1" />
                                    <br/>
                                    <strong>ALUMNO: </strong><field name="student_name" readonly="1" />
                                </h3>
                            </div>
                            <div class="o_col-6">
                                <h3>
                                    <strong>CURSO: </strong><field name="subject_id" readonly="1" />
                                    <br/>
                                    <strong>NÂ° Matricula: </strong><field name="roll_number" readonly="1" />
                                </h3>
                            </div>
                        </div>
                        <hr/>
                        <br/>
                            <group>
                                <group>
                                    <field name="student_course_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                                    <field name="mode_roll" />
                                    <field name="type_roll"/>
                                </group>
                                <group>
                                    <field name="academic_term_id"/>
                                    <field name="subject_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                                    <field name="cycle"/>
                                </group>
                            </group>
                            <hr/>
                            <br/>
                            <hr/>                  
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                               groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_subject_registration_search" model="ir.ui.view">
            <field name="name">op.subject.registration.search</field>
            <field name="model">op.subject.registration</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Matricula">
                    <filter name="filter_activo" 
                            string="Activo" 
                            domain="[('state', '=', 'activo')]" />
                </search>
            </field>
        </record>

        <record id="view_subject_registration_graph" model="ir.ui.view">
            <field name="name">op.subject.registration.graph</field>
            <field name="model">op.subject.registration</field>
            <field name="arch" type="xml">
                <graph string="Subject registration graph" type="pie">
                    <!-- <field name="course_id" type="row"/>
                    <field name="student_id" type="col"/>
                    <field name="course_id" type="measure"/> -->
                </graph>
            </field>
        </record>

        <record id="view_subject_registration_pivot" model="ir.ui.view">
            <field name="name">op.subject.registration.pivot</field>
            <field name="model">op.subject.registration</field>
            <field name="arch" type="xml">
                <pivot string="Subject Registration Analysis">
                    <!-- <field name="course_id" type="row"/>
                    <field name="student_id"/>
                    <field name="name"/>
                    <field name="state"/> -->
                </pivot>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_subject_registration_view">
            <field name="name">Matricula</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.subject.registration</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="search_view_id" ref="view_subject_registration_search"/>
            <field name="domain">[]</field>
            <field name="context">{'search_default_filter_activo': 1}</field>
        </record>

        <record id="seq_op_subject_registration" model="ir.sequence">
            <field name="name">Matricula - Subject Registration</field>
            <field name="code">op.subject.registration</field>
            <field name="prefix">SR</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
