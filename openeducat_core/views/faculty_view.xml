<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kanban_view_faculty">
            <field name="name">Docentes Kanban</field>  <!-- Cambia "Faculty" a "Docentes" -->
            <field name="model">op.faculty</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="image_1920"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="o_kanban_image" style="background:#e6e5e6;">
                                    <t t-if="record.image_1920.value">
                                        <img t-att-src="kanban_image('op.faculty', 'image_1920', record.id.raw_value)"
                                             alt="Docente"/>  <!-- Cambia "Faculty" a "Docente" -->
                                    </t>
                                    <t t-if="!record.image_1920.value">
                                        <img src="/base/static/img/avatar.png" alt="Docente"/>  <!-- Cambia "Faculty" a "Docente" -->
                                    </t>
                                </div>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <field name="name"/>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li t-if="record.l10n_latam_identification_type_id.raw_value">
                                            <field name="l10n_latam_identification_type_id"/>
                                        </li>
                                        <li t-if="record.vat.raw_value">
                                            <field name="vat"/>
                                        </li>
                                        <li t-if="record.contact_address.raw_value">
                                            <field name="contact_address"/>
                                        </li>
                                        <li t-if="record.phone.raw_value">
                                            <field name="phone"/>
                                        </li>
                                        <li t-if="record.mobile.raw_value">
                                            <field name="mobile"/>
                                        </li>
                                        <li t-if="record.email.raw_value">
                                            <a t-attf-href="mailto:#{record.email.value}">
                                                <field name="email"/>
                                            </a>
                                        </li>
                                        <li t-if="record.lang.raw_value">
                                            <field name="lang"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_op_faculty_tree" model="ir.ui.view">
            <field name="name">op.faculty.tree</field>
            <field name="model">op.faculty</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Docentes">  <!-- Cambia "Faculty" a "Docentes" -->
                    <field name="title"/>
                    <field name="name"/>
                    
                    <field name="gender" optional="hide"/>
                    <field name="phone" optional="hide"/>
                    <field name="mobile" optional="hide"/>
                    <field name="email"/>
                    <field name="nivel_academic"/>
                    <field name="main_department_id" groups="openeducat_core.group_multi_department"/>
                    <field name="allowed_department_ids" widget="many2many_tags"
                           groups="openeducat_core.group_multi_department"/>
                </tree>
            </field>
        </record>

        <record id="view_op_faculty_form" model="ir.ui.view">
            <field name="name">op.faculty.form</field>
            <field name="model">op.faculty</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Docente">  <!-- Cambia "Faculty" a "Docente" -->
                    <header groups="openeducat_core.group_op_back_office_admin">
                        <button name="%(faculty_create_employee_act)d" string="Crear Empleado" type="action"
                                class="oe_highlight" attrs="{'invisible': [('emp_id', '!=', False)]}"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                        </div>

                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archivado" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>

                        <div style="width:100%;" class="row align-items-center">
                            <div class="col-4 col-lg-2">
                                <field name="image_1920" widget="image" class="oe_left oe_avatar"/>
                            </div>
                            <div class="mb16 col-8 col-lg-10 px-0">
                                <div class="row">
                                    <h3 class="col-12 col-lg-2">
                                        <field name="title" placeholder="Título"/>
                                    </h3>
                                    <h2 class="col-12 col-lg-10">
                                        <field name="name" placeholder="Nombre" required="1" invisible="1"/>
                                        <table>
                                            <tr>
                                                <td style="padding-right:10px;">
                                                    <field name="first_name" required="1" placeholder="Nombres"/>
                                                </td>
                                                <!-- <td style="padding-right:10px;">
                                                    <field name="middle_name" placeholder="2do Nombre"/>
                                                </td> -->
                                                <td style="padding-right:10px;">
                                                    <field name="apellido_paterno" placeholder="Ape. Paterno"/>
                                                </td>
                                                <td style="padding-right:10px;">
                                                    <field name="apellido_materno" placeholder="Ape. Materno"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <notebook colspan="4">
                            <page name="personal_information" string="Información Personal">  <!-- Cambia "Personal Information" a "Información Personal" -->
                                <group>
                                    <group>
                                        <field name="l10n_latam_identification_type_id" 
                                            placeholder="Tipo de Identificación"
                                            options="{'no_open': True, 'no_create': True}"
                                            required="1"
                                            class="oe_inline"/>
                                        <field name="vat" string="N° Identificacion" class="oe_inline"/>
                                        <field name="gender"/>
                                        <field name="birth_date"/>
                                        <field name="edad"/>
                                        <field name="birth_country"/>
                                        <label for="type"/>
                                        <div name="div_type">
                                            <field class="oe_inline" name="type"/>
                                        </div>
                                        <label for="street" string="Dirección"/>  <!-- Cambia "Address" a "Dirección" -->
                                        <div name="o_address_format">
                                            <field name="street" placeholder="Calle..."/>
                                            <field name="street2" placeholder="Calle 2"/>
                                            <div class="address_format">
                                                <field name="city" placeholder="Ciudad" style="width: 40%"/>
                                                <field name="state_id" class="oe_no_button" placeholder="Estado"
                                                       style="width: 37%" options="{&quot;no_open&quot;: True}"/>
                                                <field name="zip" placeholder="Código Postal" style="width: 20%"/>
                                            </div>
                                            <field name="country_id" placeholder="País" class="oe_no_button"
                                                   options="{&quot;no_open&quot;: True}"/>
                                        </div>
                                        <!-- <field name="emergency_contact" context="{'show_address': 1}"
                                               options="{&quot;always_reload&quot;: True}"/> -->
                                    </group>
                                    <group>
                                        <field name="email"/>
                                        <field name="phone"/>
                                        <field name="mobile"/>
                                        <field name="nationality"/>
                                        <!-- <field name="lang"/> -->
                                        <field name="emp_id"/>
                                        <field name="main_department_id"
                                               groups="openeducat_core.group_multi_department"/>
                                        <field name="blood_group"/>
                                        <!-- <field name="visa_info"/> -->
                                        
                                        <field name="allowed_department_ids" widget="many2many_tags"
                                               groups="openeducat_core.group_multi_department"/>
                                    </group>
                                </group>
                            </page>
                            <page name="academico" string="Academico/Laboral">
                                <group>
                                    <group>
                                        <field name="code_faculty"/>
                                        <field name="empresa"/>
                                        <field name="country_empresa_id"/>
                                        <field name="nivel_academic"/>
                                        <field name="category_faculty"/>
                                        <field name="dedication_regime"/>
                                        <field name="fech_ingreso"/>
                                        <field name="fech_inicio"/>
                                        <field name="fech_termino"/>
                                    </group>
                                    <group>
                                        <field name="has_authority"/>
                                        <field name="position_authority"/>
                                        <field name="has_disability"/>
                                        <field name="disability"/>
                                        <field name="language_native"/>
                                        <field name="language_mother"/>
                                        <field name="language_foreign"/>
                                    </group>
                                </group>
                                <br/>
                                <hr/>
                                <group colspan="4">
                                    <field name="question1" colspan="4"
                                            placeholder="¿ERA DOCENTE UNIVERSITARIO A LA ENTRADA EN VIGENCIA DE LA LEY 30220, LU?" />
                                    <field name="question2" colspan="4"
                                             placeholder= "¿DOCENTE REALIZA INVESTIGACIÓN?"/>
                                </group>
                            </page>
                            
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_op_faculty_search" model="ir.ui.view">
            <field name="name">op.faculty.search</field>
            <field name="model">op.faculty</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Docentes">  <!-- Cambia "Faculty" a "Docentes" -->
                    <field name="name"/>
                    <field name="blood_group"/>
                    <field name="main_department_id"/>
                    <field name="allowed_department_ids"/>
                    <newline/>
                    <group expand="0" string="Agrupar por...">  <!-- Cambia "Group By..." a "Agrupar por..." -->
                        <filter name="blood_group" string="Grupo Sanguíneo" domain="[]"
                                context="{'group_by':'blood_group'}"/>
                        <filter name="nationality" string="Nacionalidad" domain="[]"
                                context="{'group_by':'nationality'}"/>
                        <filter name="language" string="Idioma" domain="[]" context="{'group_by':'lang'}"/>
                        <filter string="Archivado" name="inactive" domain="[('active', '=', False)]"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_faculty_view">
            <field name="name">Docentes</field>  <!-- Cambia "Faculties" a "Docentes" -->
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.faculty</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_op_faculty_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_faculty_view_form">
            <field name="act_window_id" ref="act_open_op_faculty_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_faculty_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_faculty_view_tree">
            <field name="act_window_id" ref="act_open_op_faculty_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_faculty_tree"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_faculty_view_kanban">
            <field name="act_window_id" ref="act_open_op_faculty_view"/>
            <field name="sequence" eval="5"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="kanban_view_faculty"/>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_faculty_view_2">
            <field name="name">Docentes</field>  <!-- Cambia "Faculties" a "Docentes" -->
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.faculty</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_op_faculty_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
