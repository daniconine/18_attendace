<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_subject_tree" model="ir.ui.view">
            <field name="name">op.subject.tree</field>
            <field name="model">op.subject</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Curso/Asignatura">
                    <field name="name"/>
                    <field name="code_system"/>
                    <field name="course_id"/>
                    <field name="cycle"/>
                    <!-- <field name="type"/> -->
                    <field name="subject_type"/>
                    <field name="num_credits"/>
                    <field name="num_hours_academic"/>
                    <field name="department_id" groups="openeducat_core.group_multi_department"/>
                </tree>
            </field>
        </record>

        <record id="view_op_subject_form" model="ir.ui.view">
            <field name="name">op.subject.form</field>
            <field name="model">op.subject</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Curso/Asignatura">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="activo,cerrado" />
                    </header>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group>
                                <field name="nickname"/>
                                <field name="cycle"/>
                                <!-- <field name="type"/> -->
                                <field name="subject_type"/>
                                <field name="code_curricular"/>
                                <field name="min_score"/>
                                <field name="total_sessions"/>
                                <field name="min_att_total"/>  
                                <field name="department_id" groups="openeducat_core.group_multi_department"/>
                            </group>
                            <group>
                                <!-- <field name="code_system"/> -->
                                <field name="course_id"/>
                                <field name="num_credits"/>
                                <field name="num_hours_academic"/>
                                <field name="num_hours_real"/>
                            </group>
                        </group>
                        
                        <!-- Nueva Secci贸n para Modalidades -->
                        <notebook>
                            <page string="Modalidades y Asistencia">
                                <group string="Configuraci贸n de Modalidades">
                                    <group>
                                        <field name="is_a_distance"/>
                                        <field name="is_semipresencial"/>
                                        <field name="is_presencial"/>
                                    </group>
                                    <group>
                                                                              
                                    </group>
                                </group>

                                <!-- Configuraci贸n de Asistencia -->
                                <group string="Configuraci贸n de Asistencia" colspan="2">
                                    <!-- A Distancia -->
                                    <group string="Modalidad A Distancia" attrs="{'invisible': [('is_a_distance', '=', False)]}">
                                        <field name="att_a_virtual" />
                                        <field name="att_a_presencial"/>
                                    </group>
                                    <!-- Semi-Presencial -->
                                    <group string="Modalidad Semi-Presencial" attrs="{'invisible': [('is_semipresencial', '=', False)]}">
                                        <field name="att_s_virtual"/>
                                        <field name="att_s_presencial"/>
                                    </group>
                                    <!-- Presencial -->
                                    <group string="Modalidad Presencial" attrs="{'invisible': [('is_presencial', '=', False)]}">
                                        <field name="att_p_virtual"/>
                                        <field name="att_p_presencial"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_op_subject_search" model="ir.ui.view">
            <field name="name">op.subject.search</field>
            <field name="model">op.subject</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Curso/Asignatura">
                    <field name="name"/>
                    <field name="code_system"/>
                    <field name="cycle"/>
                    <!-- <field name="type"/> -->
                    <field name="department_id"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter name="group_by_subject_course_id"
                                string="Programa" domain="[]"
                                context="{'group_by':'course_id'}"/>
                        <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_subject_view">
            <field name="name">Curso/Asignatura</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.subject</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_op_subject_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_subject_view_form">
            <field name="act_window_id" ref="act_open_op_subject_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_subject_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_subject_view_tree">
            <field name="act_window_id" ref="act_open_op_subject_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_subject_tree"/>
        </record>
    </data>
</odoo>
