<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="extended_hr_attendance_list" model="ir.ui.view">
            <field name="name">hr_attendance.list</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='check_out']" position="after">
                    <field name="modalidad"/>
                </xpath>
                <!-- Usamos xpath más específico para ocultar las columnas de overtime_hours y validated_overtime_hours -->
                <!-- Usamos xpath para ocultar las columnas de overtime_hours y validated_overtime_hours con optional="hide" -->
                <xpath expr="//field[@name='overtime_hours']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>

                <xpath expr="//field[@name='validated_overtime_hours']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>

                <xpath expr="//field[@name='worked_hours']" position="after">
                    <field name="horas_neto" widget="float_time"/>
                </xpath>

            </field>
        </record>

        <!-- Heredamos la vista de formulario de los empleados -->
        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <!-- Especificamos que estamos heredando la vista original de empleados -->
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <!-- Insertamos el campo de firma digital dentro de la página 'hr_settings' -->
                <xpath expr="//page[@name='hr_settings']" position="inside">
                    <group>
                        <field name="signature_image" widget="image" options="{'preview_image': 'signature_image'}"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
