<odoo>
    <record id="view_excel_report_form" model="ir.ui.view">
        <field name="name">excel.report.form</field>
        <field name="model">excel.report</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte Excel">
                <header>
                    <button name="generate_excel_report" type="object" string="Generar Reporte Excel" class="btn-primary"/>
                </header>
                <footer>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_excel_report" model="ir.actions.act_window">
        <field name="name">Reporte Excel</field>
        <field name="res_model">excel.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
