<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Lista para la Acumulación de Vacaciones Anual -->
    <record id="view_zvacation_year_list" model="ir.ui.view">
        <field name="name">zleave.zvacation.year.list</field>
        <field name="model">zleave.zvacation.year</field>
        <field name="arch" type="xml">
            <list string="Acumulación de Vacaciones Anual">
                <field name="employee_id"/>
                <field name="year" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="accumulated_days" />
                <field name="consumed_days" />
                <field name="state" />
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_zvacation_year_form" model="ir.ui.view">
        <field name="name">zleave.zvacation.year.form</field>
        <field name="model">zleave.zvacation.year</field>
        <field name="arch" type="xml">

            <form string="Acumulación de Vacaciones">

                <!-- HEADER -->
                <header>

                    <field name="state" widget="statusbar"
                           statusbar_visible="accrual,closed"/>

                    <!-- Botón actualizar -->
                    <button name="action_update_accrual"
                            type="object"
                            string="Actualizar"
                            class="btn-primary"
                            invisible="state == 'closed'"/>

                    <!-- Botón cerrar -->
                    <button name="action_close_accrual"
                            type="object"
                            string="Cerrar"
                            class="btn-danger"
                            confirm="¿Está seguro de cerrar la acumulación anual? Esta acción no se puede deshacer."
                            modifiers="{'invisible': [['state', '=', 'closed']]}"/>

                </header>

                <sheet>

                    <!-- TÍTULO -->
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>

                    <hr/>

                    <!-- GRUPO PRINCIPAL -->
                    <group>
                        <group>
                            <field name="employee_id" />
                            <field name="year" />
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>

                        <group string="Cálculo">
                            <field name="start_date_call" readonly="1"/>
                            <field name="end_date_call" readonly="1"/>
                            <field name="days_not_work"/>
                        </group>
                    </group>

                    <!-- ACUMULACIÓN -->
                    <group string="Resumen de Días">
                        <group>
                            <field name="accumulated_days"/>
                            <field name="consumed_days"/>
                        </group>
                        <group>
                            <field name="advance_days"/>
                            <field name="balance_days" readonly="1"/>
                        </group>
                    </group>

                    <!-- ASIGNACIONES -->
                    <notebook>
                        <page string="Asignaciones FIFO">
                            <field name="allocation_ids" readonly="1">
                                <list>
                                    <field name="vacation_id"/>
                                    <field name="days_allocated"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>

                <!-- CHATTER -->
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </chatter>

            </form>

        </field>
    </record>


    <!-- Acción para acceder a la acumulación de vacaciones -->
    <record id="action_zvacation_year" model="ir.actions.act_window">
        <field name="name">Acumulación de Vacaciones Anual</field>
        <field name="res_model">zleave.zvacation.year</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>


</odoo>
