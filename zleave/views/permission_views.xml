<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- ========================================================= -->
    <!-- LIST -->
    <!-- ========================================================= -->
    <record id="view_zleave_permission_list" model="ir.ui.view">
      <field name="name">zleave.permission.list</field>
      <field name="model">zleave.permission</field>
      <field name="arch" type="xml">
        <list string="Permisos / Ausencias" sample="1"
            decoration-warning="state == 'submitted'"
            decoration-success="state == 'approved'"
            decoration-danger="state == 'refused'">

          <!-- Empleado con avatar -->
          <field name="name"/>
          <field name="employee_id" widget="many2one_avatar_employee"/>

          <!-- Tipo (Sin goce / Con goce) -->
          <field name="type_permission"/>
          <!-- Fechas -->
          <field name="date_from"/>
          <field name="date_to"/>

          <!-- Duración -->
          <field name="duration_days" string="Días"/>

          <!-- Estado tipo badge -->
          <field name="state" widget="badge"
                decoration-warning="state == 'submitted'"
                decoration-success="state == 'approved'"
                decoration-danger="state == 'refused'"/>
        </list>
      </field>
    </record>

    <!-- ========================================================= -->
    <!-- FORM (Odoo 17/18) -->
    <!-- ========================================================= -->
    <record id="view_zleave_permission_form" model="ir.ui.view">
      <field name="name">zleave.permission.form</field>
      <field name="model">zleave.permission</field>
      <field name="arch" type="xml">
        <form string="Permiso ZLeave">
          <header>
            <field name="state" widget="statusbar"
                   statusbar_visible="draft,submitted,approved,refused,cancelled"/>

            <button name="action_send_for_approval"
                    type="object"
                    string="Enviar"
                    class="btn-primary"
                    invisible="state != 'draft'"/>

            <button name="action_approve"
                    type="object"
                    string="Aprobar"
                    class="btn-primary"
                    invisible="state != 'submitted'"/>

            <button name="action_refuse"
                    type="object"
                    string="Rechazar"
                    invisible="state != 'submitted'"/>

            <button name="action_cancel"
                    type="object"
                    string="Anular"
                    invisible="state in ('approved','refused','cancelled')"/>
            
            <!-- Botón para abrir los documentos adjuntos -->
            <button name="action_open_documents"
                    type="object"
                    string="Documentos Adjuntos"
                    class="btn-secondary"
                    icon="fa-file-text-o"
                    invisible="False"/>  <!-- Cambio temporal -->
          </header>

          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" readonly="1"/>
              </h1>
              <h3>
                <field name="display_name" readonly="1"/>
              </h3>
            </div>
            <separator colspan="4"/>
            <div class="oe_clear"/>
            <hr/>
            <group>
              <group>
                <field name="company_id" readonly="1"/>
                <field name="employee_id" options="{'no_create': True}" invisible="state != 'draft'"/>
                <field name="employee_id" options="{'no_create': True}" readonly="1" invisible="state == 'draft'"/>
                <field name="employee_job" options="{'no_create': True}" readonly="1"/>
              </group>
              <group>
                <field name="approver_id" readonly="1"/>
                <field name="requested_by_id" readonly="1"/>
              </group>
            </group>
            <group string="Detalles de Solicitud">
              <group>          
                <field name="type_permission"/>
                <field name="suspension_perfecta" invisible="type_permission != 'lic_sin_goce'"/>
                <field name="suspension_imperfecta" invisible="type_permission != 'lic_con_goce'"/>
              </group>   
              <group>
                <field name="date_from" widget="daterange" options="{'end_date_field': 'date_to'}"/>
                <field name="date_to" invisible="1"/>
                <field name="duration_days" readonly="1"/>
              </group>
                                
            </group>
            <group>
              <field name="description"/>
              
            </group>
            
            <div class="oe_clear"/>

            <group string="Firma" invisible="state != 'approved'">
              <div class="row">

                <!-- Columna izquierda vacía -->
                <div class="col-lg-3 d-none d-lg-block"></div>

                <!-- Columna central: firma -->
                <div class="col-12 col-lg-6">
                  <div style="border:1px solid #e5e5e5; border-radius:8px; padding:12px;">

                    <div class="d-flex align-items-start" style="gap:12px;">
                      <!-- Foto -->
                      <div>
                        <field name="approver_image_1920"
                              widget="image"
                              readonly="1"
                              options="{'preview_image': 'approver_image_1920'}"
                              style="width:96px; height:96px; border-radius:6px; object-fit:cover;"/>
                      </div>

                      <!-- Texto -->
                      <div style="font-size:11px; line-height:1.25;">
                        <div style="font-weight:700; font-size:12px; margin-bottom:4px;">
                          Firmado digitalmente por:
                          <span style="font-weight:800;">
                            <field name="approver_id" nolabel="1" readonly="1"/>
                          </span>
                        </div>

                        <div style="font-size:11px; white-space:nowrap;">
                          <span style="font-weight:600; display:inline-block; margin-right:6px;">Cargo:</span>
                          <span style="display:inline-block;">
                            <field name="cargo_id" nolabel="1" readonly="1"/>
                          </span>
                        </div>

                        <div style="font-size:11px; white-space:nowrap;">
                          <span style="font-weight:600; display:inline-block; margin-right:6px;">Fecha:</span>
                          <span style="display:inline-block;">
                            <field name="write_date" nolabel="1" readonly="1"/>
                          </span>
                        </div>

                        <div style="font-size:11px; white-space:nowrap;">
                          <span style="font-weight:600; display:inline-block; margin-right:6px;">Departamento:</span>
                          <span style="display:inline-block;">
                            <field name="employee_department_id" nolabel="1" readonly="1"/>
                          </span>
                        </div>

                        <div style="color:#666;">
                          <span style="font-weight:600; margin-right:6px;">Tipo:</span>
                          <span>Validación interna</span>
                        </div>
                      </div>
                    </div>

                  </div>
                </div>

                <!-- Columna derecha vacía -->
                <div class="col-lg-3 d-none d-lg-block"></div>

              </div>
            </group>

            <separator colspan="4"/>
            <div class="oe_clear"/>
            <hr/>
          </sheet>
          <!-- Chatter -->
          <!-- CHATTER -->
          <chatter>
            
            <field name="message_follower_ids"/>
            <field name="message_ids"/>
            <field name="activity_ids"/>
          </chatter>    

      </form>
      </field>
    </record>


    <!-- ========================================================= -->
    <!-- ACTION -->
    <!-- ========================================================= -->
    <record id="action_zleave_permission" model="ir.actions.act_window">
      <field name="name">Solicitud de Ausencia/Permiso</field>
      <field name="res_model">zleave.permission</field>
      <field name="view_mode">list,form</field>
      <field name="view_id" ref="view_zleave_permission_list"/>
      <field name="context">{'group_by': ['employee_id', 'date_from:month']}</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crea una solicitud de permiso y envíala para aprobación.
        </p>
      </field>
    </record>

  </data>
</odoo>
