<odoo>
  <record id="zleave_rule_permission_employee" model="ir.rule">
    <field name="name">Empleado: permisos solo propios</field>
    <field name="model_id" ref="model_zleave_permission"/>
    <field name="domain_force">[('employee_id', '=', user.employee_id.id)]</field>
    <field name="groups" eval="[(4, ref('zleave.group_employee'))]"/>
  </record>

  <record id="zleave_rule_permission_boss" model="ir.rule">
    <field name="name">Jefe: permisos de su equipo</field>
    <field name="model_id" ref="model_zleave_permission"/>
    <field name="domain_force">[('employee_id.parent_id.user_id', '=', user.id)]</field>
    <field name="groups" eval="[(4, ref('zleave.group_boss'))]"/>
  </record>

  <record id="zleave_rule_permission_hr" model="ir.rule">
    <field name="name">RRHH: permisos acceso completo</field>
    <field name="model_id" ref="model_zleave_permission"/>
    <field name="domain_force">[]</field>
    <field name="groups" eval="[(4, ref('zleave.group_hr_manager'))]"/>
  </record>


</odoo>
